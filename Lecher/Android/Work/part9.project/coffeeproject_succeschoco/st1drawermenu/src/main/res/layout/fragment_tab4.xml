             <ImageView
                 android:id="@+id/btn_promotion6"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 app:srcCompat="@drawable/promotion6"/>
             
             <TextView
                 android:id="@+id/text_Street"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignBottom="@id/btn_promotion6"
                 android:layout_alignLeft="@id/btn_promotion6"
                 android:layout_alignRight="@id/btn_promotion6"
                 android:layout_alignTop="@id/btn_promotion6"
                 android:gravity="center"
                 android:paddingLeft="20dp"

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">
  
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">
    
                <ImageView
                    android:id="@+id/promotion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    app:srcCompat="@drawable/promotion1"/>
            </LinearLayout>
            
  
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:layout_marginTop="20dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
            
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:src="@drawable/givecoffee"
                        android:visibility="gone"/>
            
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:visibility="gone"/>
                </LinearLayout>
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
            
                    <ImageView
                        android:id="@+id/intro_coffee"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:src="@drawable/intromain_icecoffeehtml"/>
            
                    <TextView
                        android:id="@+id/coffeetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="커피"
                        android:textAlignment="center"/>
                </LinearLayout>
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
            
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/givecoffee"
                        android:visibility="gone"/>
            
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="TextView"
                        android:visibility="gone"/>
                </LinearLayout>
    
            </LinearLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
            
                    <ImageView
                        android:id="@+id/intro_bean"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/intromain_bean"/>
            
                    <TextView
                        android:id="@+id/beantext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="원두"
                        android:textAlignment="center"
                        android:textAllCaps="false"/>
                </LinearLayout>
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
            
                    <ImageView
                        android:id="@+id/intro_bingsu"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/intromain_icechocobingsu"/>
            
                    <TextView
                        android:id="@+id/bingsutext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="빙수"/>
                </LinearLayout>
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
            
                    <ImageView
                        android:id="@+id/intro_beverage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/intromain_icehismachachip"/>
            
                    <TextView
                        android:id="@+id/beveragetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="음료"/>
                </LinearLayout>
    
            </LinearLayout>
    
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
            
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/givecoffee"
                        android:visibility="gone"/>
            
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="TextView"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:visibility="gone"/>
                </LinearLayout>
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">
            
                    <ImageView
                        android:id="@+id/intro_desert"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_weight="1"
                        android:src="@drawable/intromain_bagel_plain_450x450"/>
            
                    <TextView
                        android:id="@+id/deserttext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="디저트"/>
                </LinearLayout>
        
                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="110dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    >
            
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:src="@drawable/givecoffee"
                        android:visibility="gone"/>
            
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="TextView"
                        android:visibility="gone"/>
                </LinearLayout>
    
            </LinearLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
        
                <ImageView
                    android:id="@+id/promotion2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/promotion2"/>
    
                <TextView
                    android:id="@+id/text_Poor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/promotion2"
                    android:layout_alignLeft="@id/promotion2"
                    android:layout_alignRight="@id/promotion2"
                    android:layout_alignTop="@id/promotion2"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/give_Poor"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans">
                </TextView>
                
            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
        
                <ImageView
                    android:id="@+id/promotion3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/promotion3"/>
    
                <TextView
                    android:id="@+id/text_Hungry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/promotion3"
                    android:layout_alignLeft="@id/promotion3"
                    android:layout_alignRight="@id/promotion3"
                    android:layout_alignTop="@id/promotion3"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/give_Hungry"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans">
                </TextView>

            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
        
                <ImageView
                    android:id="@+id/promotion4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/promotion4"/>
                
                <TextView
                    android:id="@+id/text_Orphan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/promotion4"
                    android:layout_alignLeft="@id/promotion4"
                    android:layout_alignRight="@id/promotion4"
                    android:layout_alignTop="@id/promotion4"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/give_Orphan"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans">
                </TextView>

            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
        
                <ImageView
                    android:id="@+id/promotion5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/promotion5"/>
    
                <TextView
                    android:id="@+id/text_Widow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/promotion5"
                    android:layout_alignLeft="@id/promotion5"
                    android:layout_alignRight="@id/promotion5"
                    android:layout_alignTop="@id/promotion5"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/give_Widow"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans">
                </TextView>

            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
        
                <ImageView
                    android:id="@+id/promotion6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/promotion6"/>
    
                <TextView
                    android:id="@+id/text_Street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/promotion6"
                    android:layout_alignLeft="@id/promotion6"
                    android:layout_alignRight="@id/promotion6"
                    android:layout_alignTop="@id/promotion6"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/give_Street"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans">
                </TextView>
            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
        
                <ImageView
                    android:id="@+id/promotion7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/promotion7"/>
                <TextView
                    android:id="@+id/text_Misionary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/promotion7"
                    android:layout_alignLeft="@id/promotion7"
                    android:layout_alignRight="@id/promotion7"
                    android:layout_alignTop="@id/promotion7"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/give_Misionary"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans">
                </TextView>
            </RelativeLayout>
    
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
        
                <ImageView
                    android:id="@+id/promotion8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/promotion8"/>
    
                <TextView
                    android:id="@+id/text_AfricaChildren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/promotion8"
                    android:layout_alignLeft="@id/promotion8"
                    android:layout_alignRight="@id/promotion8"
                    android:layout_alignTop="@id/promotion8"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="@string/give_AfricaChildren"
                    android:textColor="#FFFFFF"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:typeface="sans">
                </TextView>
            </RelativeLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageView
        android:id="@+id/cart_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:src="@drawable/coffee1_espresso"
        android:visibility="visible"/>
    
    <TextView
        android:id="@+id/cart_name"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/cart_image"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:textColor="#000000"
        android:text="이름"
        android:textSize="20dp"/>
    
    <Button
        android:id="@+id/btn_del"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/cart_image"
        android:layout_alignStart="@+id/cart_name"
        android:layout_weight="1"
        android:text="삭제"
        android:textSize="10dp"/>
    
    <TextView
        android:id="@+id/cart_count"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_del"
        android:layout_alignBottom="@+id/btn_del"
        android:layout_alignStart="@+id/cart_price"
        android:layout_weight="1"

        android:textColor="#000000"
        android:text="갯수"
        android:textSize="20dp"/>
    
    <TextView
        android:id="@+id/cart_price"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_del"
        android:layout_alignParentEnd="true"
        android:layout_weight="1"
        android:text="가격"
        android:textColor="#000000"
        android:textSize="20dp"/>
    
    <ImageView
        android:id="@+id/btn_minus1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/cart_count"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:src="@drawable/minus"/>
    
    <ImageView
        android:id="@+id/btn_plus1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignTop="@+id/count_number1"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/count_number1"
        android:layout_weight="1"
        android:src="@drawable/plus"/>
    
    <EditText
        android:id="@+id/count_number1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/cart_count"
        android:layout_marginStart="73dp"
        android:layout_toEndOf="@+id/btn_del"
        android:layout_weight="1"
        android:focusable="false"
        android:inputType="number"
        android:text="1"
        android:textColor="@color/bg_screen4"
        android:textAlignment="center"/>

    
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.android.basicwidget.MainActivity0">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            android:visibility="visible"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:menu="@menu/navigation"/>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:orientation="horizontal">
    
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark"
                android:text="poor"/>
    
            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_dark"
                android:text="hungry"/>
    
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:text="orphan"/>
    
            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_green_dark"
                android:text="widow"/>
    
            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_blue_dark"
                android:text="streeter"/>
    
            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:text="misionary"/>
    
            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/holo_purple"
                android:text="africa children"/>

        </LinearLayout>
    
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
        
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
    
    
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:orientation="horizontal">
                
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                    
                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="370dp"
                            android:layout_height="410dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/mov45"/>
                    
                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="370dp"
                            android:layout_height="410dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/mov24"/>
                    
                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="370dp"
                            android:layout_height="410dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/mov21"/>
                    
                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="370dp"
                            android:layout_height="410dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/mov12"/>
                    
                        <ImageView
                            android:id="@+id/imageView11"
                            android:layout_width="370dp"
                            android:layout_height="410dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/mov06"/>
                    
                        <ImageView
                            android:id="@+id/imageView12"
                            android:layout_width="370dp"
                            android:layout_height="410dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/mov25"/>
                    </LinearLayout>
            
                </LinearLayout>
        
            </HorizontalScrollView>
    
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>

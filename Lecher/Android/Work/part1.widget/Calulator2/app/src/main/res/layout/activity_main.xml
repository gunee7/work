<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.android.calulator2.MainActivity">
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        
        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="right"
            android:inputType="textPersonName"
            android:text="  "
            android:textSize="40dp"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:baselineAligned="true"
        android:gravity="center"
        android:orientation="vertical">
        
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_gravity="fill_vertical|center"
            android:layout_weight="1"
            android:alignmentMode="alignBounds"
            android:background="@android:color/black"
            android:columnCount="3"
            android:orientation="horizontal"
            android:padding="2dp"
            android:rowCount="1"
            android:useDefaultMargins="true">
            
            <Button
                android:id="@+id/buttonSaveList"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:text="저장목록"
                />
            
            <Button
                android:id="@+id/buttonSave"
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="저장"/>
            
            <Button
                android:id="@+id/buttonPinalist"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:backgroundTint="@android:color/darker_gray"
                android:text="최근기록"/>
        </GridLayout>
        
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:alignmentMode="alignMargins"
            android:background="@android:color/black"
            android:columnCount="4"
            android:orientation="horizontal"
            android:padding="3dp"
            android:rowCount="5"
            android:useDefaultMargins="true"
            >
            
            <Button
                android:id="@+id/button7"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button8"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button9"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonNanugi"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="÷"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button4"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button5"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button6"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonKopagi"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="x"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
            
            <Button
                android:id='@+id/button1'
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="ㅡ"
                android:textColor="@android:color/white"
                android:textSize="20dp"/>
            
            <Button
                android:id="@+id/buttonComma"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="."
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/button0"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            
            <Button
                android:id="@+id/buttonPlusminus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="+/-"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonAc"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="AC"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonC"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="C"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonEquals"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="="
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
            
            <Button
                android:id="@+id/buttonGualho"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:backgroundTint="@color/colorAccent"
                android:text="(  )"
                android:textColor="@android:color/white"
                android:textSize="30dp"/>
        
        </GridLayout>
    </LinearLayout>

</LinearLayout>

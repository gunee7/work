<?xml version="1.0" encoding="UTF-8"?>
    
    <RelativeLayout tools:context="com.example.st2preference.LoginActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <LinearLayout android:layout_height="match_parent" android:layout_width="match_parent" android:orientation="vertical">
    
    
    <LinearLayout android:layout_height="225dp" android:layout_width="match_parent" android:orientation="vertical" android:background="@color/colorPrimary">
    
    <ImageView android:layout_height="125dp" android:layout_width="125dp" android:layout_marginTop="20dp" android:layout_gravity="center"/>
    
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="10dp" android:layout_gravity="center" android:textStyle="bold" android:textSize="25dp" android:textColor="#ffffff" android:text="평창올림픽"/>
    
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="center" android:textStyle="bold" android:textSize="18dp" android:textColor="#ffffff" android:text="2018 평창 동계 올림픽"/>

</LinearLayout>
    
    <EditText android:layout_height="wrap_content" android:layout_width="280dp" android:background="@color/colorPrimary" android:layout_marginTop="50dp" android:layout_gravity="center" android:textColor="#ffffff"  android:id="@+id/idText" android:textColorHint="#ffffff" android:padding="10dp" android:hint="아이디"/>
    
    <EditText android:layout_height="wrap_content" android:layout_width="280dp" android:background="@color/colorPrimary" android:layout_marginTop="10dp" android:layout_gravity="center" android:textColor="#ffffff"  android:id="@+id/passwordText" android:textColorHint="#ffffff" android:padding="10dp" android:hint="비밀번호" android:inputType="textPassword"/>
    
    <Button android:layout_height="wrap_content" android:layout_width="280dp" android:background="@color/colorPrimaryDark" android:layout_marginTop="10dp" android:layout_gravity="center" android:textStyle="bold" android:textSize="20dp" android:textColor="#ffffff" android:text="로그인"/>
    
    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="10dp" android:layout_gravity="center" android:textSize="18dp" android:text="회원가입" android:id="@+id/registerButton"/>

</LinearLayout>

</RelativeLayout>

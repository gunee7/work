<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".AppBarMainActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <ImageButton
                    android:id="@+id/imagebtnBa4"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/youtube"/>
                
                <ImageButton
                    android:id="@+id/imagebtnBa7"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/kakaotalk"/>
                
                <ImageButton
                    android:id="@+id/imagebtnBa2"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/google"/>
                
                <ImageButton
                    android:id="@+id/imagebtnBa6"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/hotline"/>
                
                <ImageButton
                    android:id="@+id/imagebtnBa5"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/camera"/>
                
                <ImageButton
                    android:id="@+id/imagebtnBa3"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/naver"/>
                
                <ImageButton
                    android:id="@+id/imagebtnBa1"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@color/cardview_shadow_end_color"
                    app:srcCompat="@drawable/coffee"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</FrameLayout>
